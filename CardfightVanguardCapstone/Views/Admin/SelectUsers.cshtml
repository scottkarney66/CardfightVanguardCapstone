@model IEnumerable<CardfightVanguardCapstone.Models.Users>

@{
    ViewBag.Title = "SelectUsers";
}

@section scripts{

    <script type="text/javascript">

        $(document).ready(function () {



            $('#SelectUsers').DataTable();

        });






    </script>


}

<h2>SelectUsers</h2>

<table id="users" class="display" style="width:100%">

    <thead>
        <tr>
            <th hidden="hidden">ID</th>

            <th>First Name</th>

            <th>Last Name</th>

            <th>Username</th>

            <th>Password</th>
            <th>Delete Action</th>
            <th>Edit Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (CardfightVanguardCapstone.Models.Users users in Model)
        {
            <tr>
                <td hidden="hidden">@users.UserID</td>

                <td>@users.Firstname</td>

                <td>@users.LastName</td>

                <td>@users.Username</td>

                <td>@users.Password</td>
                <td>@Html.ActionLink("delete", "DeactivateUser", new { UsersToDeactivate = users.UserID})</td>
                <td>@Html.ActionLink("edit", "EditUser", new { UserToEdit = users.UserID } )</td>
            </tr>
        }

    </tbody>



</table>